{
	"compilerOptions": {
		"module": "commonjs",
		"declaration": true,
		"target": "es6",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"sourceMap": true,
		"moduleResolution": "node",
		"lib": [
			"es6",
			"es2017",
			"dom"
		],
		"outDir": "./dist",
	    "baseUrl": "./",
		"paths": {
			"@util/*": ["./src/util/*"],
			"@controller/*": ["./src/controller/*"],
			"@entity/*": ["./src/entity/*"]
		}
	},
	"include": [
		"./src/*",
		"./src/controller/*",
		"./src/entity/*",
		"./src/util/*",
		"./index.ts"
	]
}